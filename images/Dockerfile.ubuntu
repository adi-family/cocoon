# Cocoon - Ubuntu (Standard)
# Size: ~150MB | Use: Full development environment
# Tools: All Debian tools + Node.js, clang, sudo, more dev tools
#
# Build: docker buildx bake ubuntu
# Run:   docker run -e SIGNALING_SERVER_URL=wss://... git.the-ihor.com/adi/cocoon:ubuntu

# =============================================================================
# Stage 1: Build cocoon binary
# =============================================================================
FROM rust:1.85-alpine AS builder

RUN apk add --no-cache musl-dev openssl-dev openssl-libs-static pkgconfig

WORKDIR /build

COPY crates/lib/lib-tarminal-sync ./lib-tarminal-sync
COPY crates/lib/lib-plugin-abi ./lib-plugin-abi
COPY crates/cocoon/Cargo.toml ./Cargo.toml
COPY crates/cocoon/src ./src
COPY crates/cocoon/plugin.toml ./plugin.toml

RUN sed -i 's|path = "../lib/lib-tarminal-sync"|path = "./lib-tarminal-sync"|g' Cargo.toml && \
    sed -i 's|path = "../lib/lib-plugin-abi"|path = "./lib-plugin-abi"|g' Cargo.toml

RUN cd lib-plugin-abi && \
    sed -i 's|version.workspace = true|version = "0.1.0"|g' Cargo.toml && \
    sed -i 's|edition.workspace = true|edition = "2021"|g' Cargo.toml && \
    sed -i 's|authors.workspace = true|authors = ["ADI Team"]|g' Cargo.toml && \
    sed -i 's|abi_stable.workspace = true|abi_stable = "0.11"|g' Cargo.toml

RUN cargo build --release --features standalone

# =============================================================================
# Stage 2: Runtime (Ubuntu)
# =============================================================================
FROM ubuntu:24.04

LABEL org.opencontainers.image.title="Cocoon Ubuntu"
LABEL org.opencontainers.image.description="Full containerized development environment"
LABEL cocoon.variant="ubuntu"
LABEL cocoon.tools="build-essential,python3,nodejs,clang,cmake,git,vim,sudo"

ENV DEBIAN_FRONTEND=noninteractive

# Install comprehensive dev tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Core utilities
    ca-certificates \
    curl \
    wget \
    git \
    git-lfs \
    jq \
    tar \
    gzip \
    unzip \
    zip \
    xz-utils \
    # Build tools
    build-essential \
    pkg-config \
    cmake \
    ninja-build \
    clang \
    llvm \
    # Python
    python3 \
    python3-pip \
    python3-venv \
    python3-dev \
    # Node.js (via nodesource would be better, but keeping simple)
    nodejs \
    npm \
    # Editors & tools
    vim \
    nano \
    less \
    htop \
    tree \
    tmux \
    screen \
    # Network tools
    openssh-client \
    rsync \
    netcat-openbsd \
    dnsutils \
    iputils-ping \
    # System
    sudo \
    locales \
    tzdata \
    # Shell
    bash \
    bash-completion \
    zsh \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Setup locale
RUN locale-gen en_US.UTF-8

# Copy cocoon binary
COPY --from=builder /build/target/release/cocoon /usr/local/bin/cocoon

# Setup workspace
RUN mkdir -p /cocoon/workspace /cocoon/output
WORKDIR /cocoon/workspace

# Create non-root user with sudo
RUN useradd -m -s /bin/bash -G sudo cocoon && \
    echo "cocoon ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers && \
    chown -R cocoon:cocoon /cocoon

# Environment
ENV SIGNALING_SERVER_URL=ws://signaling:8080/ws
ENV COCOON_VARIANT=ubuntu
ENV TERM=xterm-256color
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8
ENV TZ=UTC

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD pgrep cocoon || exit 1

CMD ["/usr/local/bin/cocoon"]
